<body>
  <!-- One "tab" for each step in the form: -->

<div id="wrap">
    <h1>Search:</h1>
    <form id="sdata" method="get" action="/search/result" enctype="multipart/form-data">
                  <table>
                <tr>
                  <td><div class="search">
                    <img id="imgid" style="cursor:pointer; width: 30px;  height: 30px; float:left;  position: relative;" src="http://localhost:4000/search.png">
                    <input class="insearch" type="search" value="" name"searchValue" placeholder="Tìm kiếm..."></td></div>
                <td>
                  <select class="izHAUZ" name="selectbr" >
                      <option selected disabled>Choose Brand</option>
                    <% for (var i = 0; i < databrand.length; i++) { %>
                          <option name="brandopt" value="<%= databrand[i].name%>" selected="selected"><%= databrand[i].name %></option>
                      <% } %>
                  </select>
                </td>
                <td>
                  <select class="izHAUZ" name="selectcate" >
                    <option selected disabled>Choose Catalog</option>
                    <% for (var i = 0; i < datacate.length; i++) { %>
                    <option name="cateopt" value="<%= datacate[i].id%>" selected="selected"><%= datacate[i].name %></option>
                      <% } %>
                  </select>
                </td>
                </tr>
              </table>

<div id= "displaysearch" style="margin-top:10px">
    <div id= "child" >
        <table style="width:800px">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Image</th>
            <th>Thumbnail</th>
            <th>Price</th>
            <th>Catagory</th>
            <th>Function</th>
          </tr>
    <tr>
      <% for (var i = 0; i < datase.length; i++) { %>
        <tr>
          <td><%= datase[i].id %></td>
          <td><%= datase[i].product_name %></td>
            <td><%= datase[i].image%></td>
            <td><img src="http://localhost:4000/<%=datase[i].image%>" height="100" width="100"></td>
          <td><%= datase[i].price %></td>
          <td><%= datase[i].catagory %></td>
          <% } %>
    </tr>
  </table>
</div>
</form>
</div>
